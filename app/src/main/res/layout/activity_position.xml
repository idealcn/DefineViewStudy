<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/offsetLeftAndRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="offsetLeftAndRight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/valueAnimation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="属性动画更改位置"
        app:layout_constraintEnd_toEndOf="@+id/offsetLeftAndRight"
        app:layout_constraintStart_toStartOf="@+id/offsetLeftAndRight"
        app:layout_constraintTop_toBottomOf="@+id/offsetLeftAndRight" />

    <Button
        android:id="@+id/btnLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View.layout"
        app:layout_constraintEnd_toEndOf="@+id/valueAnimation"
        app:layout_constraintStart_toStartOf="@+id/valueAnimation"
        app:layout_constraintTop_toBottomOf="@+id/valueAnimation" />

    <Button
        android:id="@+id/btnTranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="平移动画"
        app:layout_constraintEnd_toEndOf="@+id/btnLayout"
        app:layout_constraintStart_toStartOf="@+id/btnLayout"
        app:layout_constraintTop_toBottomOf="@+id/btnLayout" />

    <Button
        android:id="@+id/btnLayoutParams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="16dp"
        android:text="LayoutParams"
        app:layout_constraintEnd_toEndOf="@+id/btnTranslation"
        app:layout_constraintStart_toStartOf="@+id/btnTranslation"
        app:layout_constraintTop_toBottomOf="@+id/btnTranslation" />

    <Button
        android:id="@+id/btnScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Scroll"
        app:layout_constraintEnd_toEndOf="@+id/btnLayoutParams"
        app:layout_constraintStart_toStartOf="@+id/btnLayoutParams"
        app:layout_constraintTop_toBottomOf="@+id/btnLayoutParams" />


</android.support.constraint.ConstraintLayout>